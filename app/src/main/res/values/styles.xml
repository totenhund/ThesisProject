<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/TextInputLayoutHintAppearance</item>
    </style>

    <style name="TextInputLayoutHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="RoundedWhiteBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_white_half_rectangle</item>
    </style>


    <style name="BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/RoundedWhiteBottomSheet</item>
    </style>

</resources>